{
  "include": [
    "src",
    "test"
  ],
  "compilerOptions": {
    "lib": [
      "ESNext",
      "dom"
    ],
    "module": "ESNext",
    "target": "ESNext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": false,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "declaration": true,
    "declarationDir": "dist",
    "moduleResolution": "node",
    "downlevelIteration": true
  }
}
